{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "Create DB01 Instance Stack",

	"Parameters": {
		"StackName" : {
			"Description" : " The name of the Stack ",
			"Type": "String",
			"MinLength": "1",
			"MaxLength": "52",
			"Default" : "Name of the EC2 Instance stack name",
			"ConstraintDescription": "A short name to identify this Stack (USE LOWERCASE ONLY)"
		},
		"AMI": {
			"Type": "AWS::EC2::Image::Id",
			"Default": "ami-c998b6b2",
			"Description": "AMI id to use for the DB01 Instances"
		},
		"InstanceType": {
		    "Description": "The instance type to use for the DB01 app",
			"Type": "String",
			"Default": "t2.micro",
			"AllowedValues": [ "t1.micro", "t2.nano", "t2.micro", "t2.small", "t2.medium", "t2.large", "m1.small", "m1.medium", "m1.large", "m1.xlarge", "m2.xlarge", "m2.2xlarge", "m2.4xlarge", "m3.medium", "m3.large", "m3.xlarge", "m3.2xlarge", "m4.large", "m4.xlarge", "m4.2xlarge", "m4.4xlarge", "m4.10xlarge", "c1.medium", "c1.xlarge", "c3.large", "c3.xlarge", "c3.2xlarge", "c3.4xlarge", "c3.8xlarge", "c4.large", "c4.xlarge", "c4.2xlarge", "c4.4xlarge", "c4.8xlarge", "g2.2xlarge", "g2.8xlarge", "r3.large", "r3.xlarge", "r3.2xlarge", "r3.4xlarge", "r3.8xlarge", "i2.xlarge", "i2.2xlarge", "i2.4xlarge", "i2.8xlarge", "d2.xlarge", "d2.2xlarge", "d2.4xlarge", "d2.8xlarge", "hi1.4xlarge", "hs1.8xlarge", "cr1.8xlarge", "cc2.8xlarge", "cg1.4xlarge"],
			"ConstraintDescription" : "must be a valid EC2 instance type.",
			"MinLength": "1"
		},
		"KeyPairName": {
		    "Description": "Name of an existing EC2 KeyPair to enable SSH access to the instances",
			"Type": "AWS::EC2::KeyPair::KeyName",
			"Default": "rajamediakey",
			"ConstraintDescription" : "must be the name of an existing EC2 KeyPair."
			
		},
		"SecurityGroup": {
		    "Description": "SecurityGroup for the machine",
			"Type": "String",
			"Default": "sg-a9bdddda",
			"ConstraintDescription" : "must be the name of an existing DB01 SecurityGroup name."
		},
		"AppName": {
			"Type": "String",
			"Description": "AppName for the EC2 instance"
		},
		"Subnet": {
			"Type": "String",
			"Description": "Subnet Id for the machine of DB01 EC2 instance",
			"Default": "subnet-28023172",
			"ConstraintDescription" : "must be the name of an existing DB01 SubenetID name."
		}
	},

	"Resources": {

		"EC2Instance": {
			"Type": "AWS::EC2::Instance",
			"Properties": {
				"ImageId": { "Ref": "AMI" },
				"InstanceType": { "Ref": "InstanceType" },
				"KeyName": { "Ref": "KeyPairName" },
				"SecurityGroupIds": [{ "Ref": "SecurityGroup" }],
				"SubnetId": { "Ref": "Subnet" },
				"BlockDeviceMappings" : [{
					"DeviceName" : "/dev/sda1",
					"Ebs" : {
						"DeleteOnTermination" : "true"
					}
				}],
				"Tags": [
					{ "Key": "Name", "Value": {"Fn::Join" : [ "", [ { "Ref" : "StackName"}, "_", { "Ref" : "AppName"}, "_", "Instance"]]}}
				],
				"UserData": {
					"Fn::Base64": { "Fn::Join":[ 
					"\n", 
					[  
					"#!/bin/bash -v ",
					"export HOSTNAME=`curl http://169.254.169.254/latest/meta-data/hostname`"
					] ] }
				}
			}
		}
	},
	"Outputs": {
		"PublicDnsName": {
			"Description": "Public dns of the machine",
			"Value": {
				"Fn::GetAtt": ["EC2Instance","PublicDnsName"]
			}
		},

		"PublicIP": {
			"Description": "Public IP of the machine",
			"Value": {
				"Fn::GetAtt": ["EC2Instance","PublicIp"]
			}
		},

		"Hostname": {
			"Description": "Hostname of the newly created instance",
			"Value": {
				"Fn::GetAtt": ["EC2Instance","PrivateDnsName"]
			}
		},
		"InstanceId": {
			"Description": "Instance Id of the newly created instance",
			"Value": {
				"Ref": "EC2Instance"
			}
		}
	}
}